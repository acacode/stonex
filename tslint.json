{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-config-standard"
	],
    "linterOptions": {
        "exclude": []
    },
	"rules":{
		"trailing-comma":true,
		"typedef": [
			true,
			"call-signature",
			"property-declaration"
		],
		"interface-name": false,
		"object-literal-key-quotes": false,
		"no-shadowed-variable": false,
		"strict-type-predicates": false,
		"no-console": false,
		"max-classes-per-file": false,
		"ban-types": false,
		"arrow-parens": false
	}
}